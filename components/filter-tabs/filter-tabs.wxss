/* components/filter-tabs/filter-tabs.wxss */
.filter-tabs {
  display: flex;
  gap: 8px;
  margin-bottom: 16px;
  width: 100%;
  box-sizing: border-box;
}

.filter-tab {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 12px;
  height: 32px;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
  background: #FFFFFF;
  color: #0A0A0A;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.filter-tab.active {
  background: #030213;
  color: #FFFFFF;
  border: none;
}




