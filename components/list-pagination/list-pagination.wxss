/* components/list-pagination/list-pagination.wxss */
.list-pagination {
  width: 100%;
}

.load-more {
  padding: 32rpx;
  text-align: center;
}

.load-more-btn {
  display: inline-block;
  padding: 16rpx 48rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  color: #666;
  font-size: 28rpx;
  transition: all 0.3s;
}

.load-more-btn:active {
  background: #e0e0e0;
}

.list-end {
  padding: 24rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

