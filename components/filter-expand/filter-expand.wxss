/* components/filter-expand/filter-expand.wxss */
.filter-expand {
  width: 100%;
}

.filter-content {
  padding: 24rpx 0;
}

.filter-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  color: #007AFF;
  font-size: 28rpx;
  border-top: 1px solid #f0f0f0;
}

.toggle-text {
  margin-right: 8rpx;
}

.toggle-icon {
  font-size: 20rpx;
  transition: transform 0.3s;
}

