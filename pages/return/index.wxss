/* pages/return/index.wxss */
.container {
  padding: 16px;
}

.page-header {
  margin-bottom: 16px;
}

.page-title {
  font-size: 20px;
  font-weight: 500;
  color: #101828;
  display: block;
  margin-bottom: 4px;
}

.page-subtitle {
  font-size: 14px;
  color: #6A7282;
  display: block;
}

/* 统计卡片 */
.stats-cards {
  display: flex;
  gap: 8px;
  margin-bottom: 16px;
}

.stats-card {
  flex: 1;
  padding: 16px;
  border-radius: 14px;
  color: #FFFFFF;
}

.stats-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stats-label {
  font-size: 14px;
  opacity: 0.8;
}

.stats-value {
  font-size: 24px;
  font-weight: 700;
}

.stats-unit {
  font-size: 12px;
  opacity: 0.8;
}

/* 搜索容器 */
.search-container {
  margin-bottom: 16px;
}

/* 回货单列表 */
.order-list {
  margin-top: 16px;
}

.order-card {
  margin-bottom: 12px;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 4px;
}

.order-title {
  display: flex;
  align-items: center;
  gap: 8px;
}

.factory-name {
  font-size: 16px;
  font-weight: 500;
  color: #101828;
}

.order-no {
  font-size: 14px;
  color: #6A7282;
}

.order-info {
  margin-bottom: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-text {
  font-size: 12px;
  color: #155DFC;
}

.info-text-right {
  text-align: right;
}

.style-info-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.style-image-container {
  width: 40px;
  height: 40px;
  flex-shrink: 0;
}

.style-image {
  width: 100%;
  height: 100%;
  border-radius: 6px;
  background: #F3F4F6;
}

.style-image-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 6px;
  background: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 20px;
  height: 20px;
  opacity: 0.3;
  color: #6A7282;
}

.order-details {
  display: flex;
  gap: 8px;
  margin-bottom: 12px;
}

.detail-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.detail-label {
  font-size: 14px;
  color: #6A7282;
}

.detail-value {
  font-size: 16px;
  font-weight: 700;
  color: #101828;
}

.fee-value {
  color: #00A63E;
}

.order-meta {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 14px;
}

.meta-text {
  color: #4A5565;
}

.meta-separator {
  color: #99A1AF;
}




