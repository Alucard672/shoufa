/* pages/return/index.wxss */
.container {
  padding: 16px;
}

.page-header {
  margin-bottom: 16px;
}

.page-title {
  font-size: 20px;
  font-weight: 500;
  color: #101828;
  display: block;
  margin-bottom: 4px;
}

.page-subtitle {
  font-size: 14px;
  color: #6A7282;
  display: block;
}

/* 统计卡片 */
.stats-cards {
  display: flex;
  gap: 8px;
  margin-bottom: 16px;
}

.stats-card {
  flex: 1;
  padding: 16px;
  border-radius: 14px;
  color: #FFFFFF;
}

.stats-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stats-label {
  font-size: 14px;
  opacity: 0.8;
}

.stats-value {
  font-size: 24px;
  font-weight: 700;
}

.stats-unit {
  font-size: 12px;
  opacity: 0.8;
}

/* 搜索容器 */
.search-container {
  margin-bottom: 16px;
}

/* 回货单列表 */
.order-list {
  margin-top: 12px;
}

.order-card {
  margin-bottom: 12px;
  padding: 12px;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
  padding-bottom: 8px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.order-title {
  display: flex;
  align-items: center;
  gap: 6px;
}

.factory-name {
  font-size: 15px;
  font-weight: 600;
  color: #1E293B;
}

.order-no {
  font-size: 12px;
  color: #94A3B8;
}

.order-info {
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-text {
  font-size: 13px;
  color: #3B82F6;
  font-weight: 500;
}

.info-text-right {
  text-align: right;
}

.style-info-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.style-image-container {
  width: 36px;
  height: 36px;
  flex-shrink: 0;
  border-radius: 4px;
  overflow: hidden;
  background: #F1F5F9;
}

.style-image {
  width: 100%;
  height: 100%;
}

.style-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 18px;
  height: 18px;
  opacity: 0.3;
}

.order-details {
  display: flex;
  flex-wrap: wrap;
  row-gap: 12px;
  margin-bottom: 8px;
  background: #F8FAFC;
  padding: 10px;
  border-radius: 8px;
}

.detail-item {
  flex: 0 0 50%;
  display: flex;
  flex-direction: column;
}

.detail-label {
  font-size: 11px;
  color: #64748B;
  margin-bottom: 2px;
}

.detail-value {
  font-size: 15px;
  font-weight: 700;
  color: #1E293B;
}

.fee-value {
  color: #10B981;
}

.order-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4px;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
}

.meta-text {
  color: #64748B;
}

.meta-separator {
  color: #99A1AF;
}




