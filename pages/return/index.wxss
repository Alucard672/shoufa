/* pages/return/index.wxss */
@import "../../styles/big-design-common.wxss";

.page-header {
  margin-bottom: 16px;
}

.page-title {
  font-size: 20px;
  font-weight: 500;
  color: #101828;
  display: block;
  margin-bottom: 4px;
}

.page-subtitle {
  font-size: 14px;
  color: #6A7282;
  display: block;
}

/* 回货页筛选按钮：胶囊形 */
.return-seg-row {
  margin: 12px 0;
}

.return-seg-row .seg-btn {
  border-radius: 999px;
  height: 37px;
  padding: 0 14px;
  color: #364153;
}

.return-seg-row .seg-btn.is-active {
  color: #FFFFFF;
}

/* 搜索框：右侧图标 */
.return-search {
  margin: 8px 0 16px;
}

/* 统计卡片 */
.stats-cards {
  display: flex;
  gap: 8px;
  margin-bottom: 16px;
}

.stats-card {
  flex: 1;
  padding: 16px;
  border-radius: 14px;
  color: #FFFFFF;
}

.stats-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stats-label {
  font-size: 14px;
  opacity: 0.8;
}

.stats-value {
  font-size: 24px;
  font-weight: 700;
}

.stats-unit {
  font-size: 12px;
  opacity: 0.8;
}

/* 搜索容器 */
.search-container {
  margin-bottom: 16px;
}

/* 回货单列表 */
.order-list {
  margin-top: 12px;
}

.order-card {
  padding: 12px;
  border-radius: 14px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  background: #FFFFFF;
  overflow: hidden;
  margin-bottom: 0; /* 覆盖 .card 的 margin-bottom，由 .swipe-item 控制间距 */
}

/* 左滑功能 - iOS 原生风格 */
/* Wrapper: 只负责外边距 */
.swipe-item {
  margin-bottom: 12px;
}

/* Container: 相对定位，圆角，隐藏溢出 */
.swipe-container {
  position: relative;
  border-radius: 14px;
  overflow: hidden;
}

/* Background Layer (Buttons): 绝对定位，右对齐，z-index: 0 */
.swipe-actions {
  position: absolute;
  right: 0;
  top: 1px;
  bottom: 1px;
  display: flex;
  z-index: 0;
}

.swipe-action-btn {
  width: 70px;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 15px;
  font-weight: 500;
  box-sizing: border-box;
  gap: 4px;
}

.swipe-action-btn text {
  display: block;
  line-height: 1;
}

.swipe-edit-btn {
  background: #2B7FFF;
}

.swipe-void-btn {
  background: #DC2626;
}

/* Foreground Layer (Card Content): 相对定位，z-index: 1，白色背景，可移动 */
.swipe-content {
  position: relative;
  z-index: 1;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.return-card--warning {
  background: #FFF7ED; /* 浅橙色 - 未结算 */
  border-color: #FFD6A7;
}

.return-card--info {
  background: #EFF6FF; /* 浅蓝色 - 部分结算 */
  border-color: #BEDBFF;
}

.return-card--success {
  background: #F0FDF4; /* 浅绿色 - 已结算 */
  border-color: #BBF7D0;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
  padding-bottom: 8px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.order-title {
  display: flex;
  align-items: center;
  gap: 6px;
  flex: 1;
}

.factory-name {
  font-size: 15px;
  font-weight: 600;
  color: #1E293B;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 左滑功能 */
.swipe-item {
  position: relative;
  overflow: hidden;
  margin-bottom: 12px;
}

.swipe-content {
  position: relative;
  transition: transform 0.3s ease;
  z-index: 1;
  background: transparent;
}

.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  display: flex;
  z-index: 0;
}

.swipe-action-btn {
  width: 80px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 14px;
  font-weight: 500;
  box-sizing: border-box;
}

.swipe-edit-btn {
  background: #2B7FFF;
}

.swipe-void-btn {
  background: #DC2626;
}

.order-header-right {
  display: flex;
  align-items: center;
  gap: 12px;
}

.order-no-row {
  display: flex;
  align-items: center;
  gap: 6px;
}

.order-no {
  font-size: 12px;
  color: #94A3B8;
}

.order-no.voided-text {
  color: #9CA3AF;
  text-decoration: line-through;
}

.voided-badge {
  padding: 2px 6px;
  background: #FEF2F2;
  border-radius: 4px;
  font-size: 10px;
  font-weight: 500;
  color: #DC2626;
}

.share-btn {
  width: 26px;
  height: 26px;
  background: #2B7FFF;
  color: #FFFFFF;
  border-radius: 999px;
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order-info {
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-text {
  font-size: 13px;
  color: #3B82F6;
  font-weight: 500;
}

.info-text-right {
  text-align: right;
}

.style-info-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.style-image-container {
  width: 36px;
  height: 36px;
  flex-shrink: 0;
  border-radius: 4px;
  overflow: hidden;
  background: #F1F5F9;
}

.style-image {
  width: 100%;
  height: 100%;
}

.style-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 18px;
  height: 18px;
  opacity: 0.3;
}

.order-details {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  margin-bottom: 8px;
  background: #F8FAFC;
  padding: 10px;
  border-radius: 8px;
}

.detail-thumb {
  width: 64px;
  height: 64px;
  border-radius: 8px;
  overflow: hidden;
  background: #eef2f6;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.detail-thumb-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.detail-thumb-placeholder {
  border: 1px dashed #cbd5e1;
}

.detail-thumb-icon {
  width: 24px;
  height: 24px;
  opacity: 0.35;
}

.detail-info-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-label {
  font-size: 11px;
  color: #64748B;
}

.detail-value {
  font-size: 15px;
  font-weight: 700;
  color: #1E293B;
}

.fee-value {
  color: #10B981;
}

.order-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4px;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
}

.meta-text {
  color: #64748B;
}

.meta-separator {
  color: #99A1AF;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.share-modal-content {
  width: 100%;
  background: #FFFFFF;
  border-radius: 20px 20px 0 0;
  padding: 24px;
  box-sizing: border-box;
}

.share-options {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24px;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 16px;
  min-width: 100px;
}

.share-option-icon {
  width: 32px;
  height: 32px;
}

.share-option-text {
  font-size: 14px;
  color: #333333;
}

.share-modal-close {
  width: 100%;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F3F4F6;
  border-radius: 8px;
  font-size: 16px;
  color: #333333;
}

