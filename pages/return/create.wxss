/* pages/return/create.wxss */
.container {
  padding: 16px;
}

.form {
  background: #FFFFFF;
  border-radius: 14px;
  padding: 16px;
}

.form-item {
  margin-bottom: 16px;
}

.form-label {
  display: block;
  font-size: 14px;
  color: #101828;
  margin-bottom: 8px;
}

.form-input {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  background: #F3F3F5;
  border-radius: 8px;
  font-size: 16px;
  color: #101828;
}

.form-readonly {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  background: #F3F3F5;
  border-radius: 8px;
  display: flex;
  align-items: center;
  font-size: 16px;
  color: #101828;
}

.picker {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  background: #F3F3F5;
  border-radius: 8px;
  display: flex;
  align-items: center;
  font-size: 16px;
  color: #101828;
}

.calc-results {
  background: #F9FAFB;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 16px;
}

.calc-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.calc-item:last-child {
  margin-bottom: 0;
}

.calc-label {
  font-size: 14px;
  color: #6A7282;
}

.calc-value {
  font-size: 16px;
  font-weight: 700;
  color: #101828;
}

.calc-value.fee {
  color: #00A63E;
}

.form-actions {
  margin-top: 24px;
}

.form-actions .btn {
  width: 100%;
  height: 44px;
}




