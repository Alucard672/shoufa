/* pages/login/index.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 60px 30px;
  background-color: #FFFFFF;
  box-sizing: border-box;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40px;
}

.logo {
  width: 80px;
  height: 80px;
  margin-bottom: 20px;
}

.logo-placeholder {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #155DFC 0%, #0046D5 100%);
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
  box-shadow: 0 10px 20px rgba(21, 93, 252, 0.2);
}

.logo-text {
  color: #FFFFFF;
  font-size: 32px;
  font-weight: 800;
}

.app-name {
  font-size: 22px;
  font-weight: 700;
  color: #101828;
  margin-bottom: 8px;
}

.app-desc {
  font-size: 14px;
  color: #6A7282;
}

.login-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  width: 100% !important;
  height: 50px;
  background: #07C160;
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 20px;
  border: none;
}

.wx-icon {
  width: 24px;
  height: 24px;
  margin-right: 10px;
}

.init-section {
  width: 100%;
  margin-bottom: 20px;
}

.init-btn {
  width: 100%;
  height: 44px;
  background: #F3F4F6;
  border-radius: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #155DFC;
  font-size: 14px;
  font-weight: 500;
}

.login-tip {
  font-size: 12px;
  color: #99A1AF;
  display: flex;
  align-items: center;
}

.protocol {
  color: #155DFC;
  margin-left: 4px;
}

.footer {
  text-align: center;
}

.footer text {
  font-size: 12px;
  color: #CBD5E1;
}
