/* pages/index/activities.wxss */
@import "../../styles/big-design-common.wxss";

.design-page {
  background-color: #F9FAFB;
  min-height: 100vh;
}

.design-subtitle {
  font-size: 14px;
  color: #6A7282;
  display: block;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
  margin-bottom: 16px;
}

.stats-card {
  padding: 12px;
  border-radius: 14px;
  color: #FFFFFF;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.stats-blue { background: linear-gradient(135deg, #2B7FFF 0%, #155DFC 100%); }
.stats-green { background: linear-gradient(135deg, #10B981 0%, #059669 100%); }
.stats-orange { background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%); }

.stats-label {
  font-size: 11px;
  opacity: 0.8;
}

.stats-value-row {
  display: flex;
  align-items: baseline;
  gap: 2px;
  margin-top: 4px;
}

.stats-value {
  font-size: 18px;
  font-weight: 700;
}

.stats-unit {
  font-size: 10px;
  opacity: 0.8;
}

/* 筛选区域 */
.filter-section {
  margin-bottom: 16px;
  background: #FFFFFF;
  padding: 12px;
  border-radius: 14px;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.filter-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  padding: 0 4px;
}

.filter-title {
  font-size: 13px;
  font-weight: 600;
  color: #101828;
}

.filter-reset {
  font-size: 13px;
  color: #155DFC;
  font-weight: 500;
}

.filter-reset:active {
  opacity: 0.7;
}

.seg-row {
  margin-bottom: 12px;
}

.search-wrap {
  margin-top: 4px;
}

/* 列表卡片 */
.activity-list-container {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.activity-item-card {
  background: #FFFFFF;
  border-radius: 14px;
  padding: 12px;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
  padding-bottom: 8px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.03);
}

.item-type-tag {
  font-size: 10px;
  padding: 2px 8px;
  border-radius: 4px;
  font-weight: 500;
}

.tag-blue { background: #EFF6FF; color: #155DFC; }
.tag-green { background: #ECFDF5; color: #10B981; }

.item-date {
  font-size: 11px;
  color: #99A1AF;
}

.item-body {
  display: flex;
  gap: 12px;
}

.item-thumb {
  width: 64px;
  height: 64px;
  border-radius: 8px;
  overflow: hidden;
  background: #F3F4F6;
  flex-shrink: 0;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.item-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-img-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  font-size: 14px;
  font-weight: 600;
  color: #101828;
  margin-bottom: 2px;
}

.item-desc {
  font-size: 13px;
  color: #4A5565;
  margin-bottom: 4px;
}

.style-bold {
  font-weight: 700;
}

.item-no {
  font-size: 11px;
  color: #99A1AF;
}

.reset-btn-wrap {
  margin-top: 24px;
  padding-bottom: 40px;
}

.reset-btn {
  background: #F3F4F6;
  color: #6A7282;
  font-size: 14px;
  border-radius: 8px;
}

.empty-tip {
  padding: 60px 0;
  text-align: center;
  color: #99A1AF;
  font-size: 14px;
}

.loading-tip {
  padding: 20px 0;
  text-align: center;
  color: #99A1AF;
  font-size: 12px;
}
