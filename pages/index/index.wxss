/* pages/index/index.wxss */
@import "../../styles/big-design-common.wxss";

.design-page {
  /* 用 rpx 对齐设计稿 */
}

.page-header {
  margin-bottom: 16px;
}

.page-title {
  font-size: 20px;
  font-weight: 500;
  color: #101828;
  display: block;
  margin-bottom: 4px;
}

.page-subtitle {
  font-size: 14px;
  color: #6A7282;
  display: block;
}

/* 数据总览卡片 */
.overview-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
  margin-bottom: 16px;
}

.overview-card {
  padding: 16px;
  border-radius: 14px;
  color: #FFFFFF;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.card-blue {
  background: linear-gradient(135deg, rgba(43, 127, 255, 1) 0%, rgba(21, 93, 252, 1) 100%);
}

.card-orange {
  background: linear-gradient(135deg, rgba(255, 105, 0, 1) 0%, rgba(245, 73, 0, 1) 100%);
}

.card-purple {
  background: linear-gradient(135deg, rgba(173, 70, 255, 1) 0%, rgba(152, 16, 250, 1) 100%);
}

.card-header {
  opacity: 0.8;
  margin-bottom: 8px;
}

.card-label {
  font-size: 12px;
  color: #FFFFFF;
}

.card-value {
  font-size: 24px;
  font-weight: 700;
  line-height: 32px;
  margin-bottom: 4px;
  display: flex;
  align-items: center;
}

.card-unit {
  font-size: 12px;
  opacity: 0.8;
}

/* 快速操作 */
.quick-actions {
  margin-bottom: 16px;
}

.home-card {
  background: #FFFFFF;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 14px;
  padding: 16px;
  box-sizing: border-box;
}

.section-title-wrapper {
  display: flex;
  align-items: baseline;
  gap: 8px;
}

.section-title {
  font-size: 18px;
  font-weight: 700;
  color: #101828;
}

.section-subtitle {
  font-size: 12px;
  color: #94A3B8;
  font-weight: 400;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  width: 100%;
  box-sizing: border-box;
}

.action-buttons {
  display: flex;
  gap: 8px;
  margin-top: 12px;
}

.action-btn {
  flex: 1;
  height: 48px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-issue {
  background: #EFF6FF;
}

.btn-return {
  background: #F0FDF4;
}

.btn-text {
  font-size: 14px;
  font-weight: 500;
}

.btn-issue .btn-text {
  color: #1447E6;
}

.btn-return .btn-text {
  color: #008236;
}

/* 最近动态 */
.recent-activities {
  margin-bottom: 16px;
}

.more-link {
  display: flex;
  align-items: center;
  gap: 4px;
  color: #155DFC;
  font-size: 14px;
}

.more-link:active {
  opacity: 0.7;
}

.activity-list {
  display: flex;
  flex-direction: column;
}

.activity-item {
  display: flex;
  align-items: flex-start;
  padding: 12px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  gap: 12px;
}

.activity-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.activity-thumb {
  width: 48px;
  height: 48px;
  border-radius: 8px;
  overflow: hidden;
  background: #F3F4F6;
  flex-shrink: 0;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.activity-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.activity-img-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 20px;
  height: 20px;
  opacity: 0.3;
  color: #6A7282;
}

.activity-content {
  flex: 1;
  min-width: 0;
}

.activity-title-line {
  font-size: 14px;
  color: #101828;
  font-weight: 500;
  display: block;
  margin-bottom: 2px;
}

.activity-detail {
  font-size: 12px;
  color: #6A7282;
  margin-bottom: 4px;
}

.style-bold {
  font-weight: 700;
  color: #101828;
}

.activity-date {
  font-size: 11px;
  color: #99A1AF;
}

.activity-dot {
  display: none;
}

.empty-tip {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
