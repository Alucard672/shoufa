/* pages/style/index.wxss */
.container {
  padding: 16px;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.page-title {
  font-size: 20px;
  font-weight: 500;
  color: #101828;
}

.page-subtitle {
  font-size: 14px;
  color: #6A7282;
}

.btn {
  padding: 8px 16px;
  border-radius: 8px;
  font-size: 14px;
  text-align: center;
}

.btn-primary {
  background: #9810FA;
  color: #FFFFFF;
}

/* 统计卡片 */
.stats-card {
  padding: 16px;
  margin-bottom: 16px;
  background: linear-gradient(90deg, rgba(173, 70, 255, 1) 0%, rgba(152, 16, 250, 1) 100%);
  border-radius: 14px;
  color: #FFFFFF;
}

.stats-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stats-label {
  font-size: 14px;
  opacity: 0.8;
}

.stats-value {
  font-size: 30px;
  font-weight: 700;
  line-height: 1.2em;
}

.stats-unit {
  font-size: 12px;
  opacity: 0.8;
}

/* 搜索和筛选容器 */
.search-filter-container {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 16px;
}

.search-wrapper {
  flex: 1;
}

.filter-picker {
  flex-shrink: 0;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 8px 12px;
  background: #F3F4F6;
  border-radius: 8px;
  font-size: 13px;
  color: #364153;
}

.filter-arrow {
  font-size: 10px;
  color: #6A7282;
}

.style-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.style-card {
  padding: 0;
}

.card-content {
  padding: 14px 16px;
}

.style-header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding-bottom: 12px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  margin-bottom: 12px;
}

.style-image-container {
  width: 72px;
  height: 72px;
  flex-shrink: 0;
  border-radius: 10px;
  overflow: hidden;
  background: #F3F4F6;
}

.style-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.style-image-placeholder {
  width: 72px;
  height: 72px;
  flex-shrink: 0;
  border-radius: 10px;
  background: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 28px;
  height: 28px;
  opacity: 0.4;
}

.style-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
  flex: 1;
  min-width: 0;
  justify-content: center;
}

.style-code-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.style-code {
  font-size: 17px;
  font-weight: 700;
  color: #101828;
}

.style-badge {
  padding: 2px 8px;
  background: #F3E8FF;
  border-radius: 6px;
  font-size: 11px;
  font-weight: 600;
  color: #9810FA;
  line-height: 1.4em;
}

.style-name {
  font-size: 14px;
  color: #6A7282;
  line-height: 1.4em;
  word-break: break-word;
}

.style-actions {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.btn-edit-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  background: transparent;
}

.icon-edit {
  width: 16px;
  height: 16px;
  color: #6A7282;
}

.style-arrow {
  font-size: 24px;
  color: #6A7282;
  font-weight: 300;
}

.style-details {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.detail-section {
  padding: 10px 0;
  border-top: 1px solid rgba(0, 0, 0, 0.06);
}

.detail-section:first-child {
  border-top: none;
  padding-top: 0;
}

.detail-section:last-child {
  padding-bottom: 0;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 28px;
}

.detail-label {
  font-size: 13px;
  color: #6A7282;
  flex-shrink: 0;
  width: 120px;
}

.detail-value {
  font-size: 13px;
  font-weight: 600;
  color: #9810FA;
  text-align: right;
  flex: 1;
}

.detail-value.loss-rate {
  color: #F54900;
}

.detail-value.actual-usage {
  color: #101828;
  font-weight: 500;
}

.detail-value.category {
  font-weight: 500;
  color: #364153;
}

.detail-value.fee {
  color: #0052D9;
}

.detail-value.remark {
  font-weight: 400;
  color: #4A5565;
}

.badge-group {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  flex: 1;
  justify-content: flex-end;
}

.badge-item {
  padding: 3px 8px;
  background: #F3F4F6;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 500;
  color: #364153;
  line-height: 1.2em;
}

.empty-tip {
  text-align: center;
  padding: 40px 0;
  color: #99A1AF;
  font-size: 14px;
}

/* 已停用状态 */
.card-disabled {
  opacity: 0.6;
  background: #F9FAFB !important;
}

.disabled-badge {
  padding: 2px 6px;
  background: #FEF2F2;
  border-radius: 4px;
  font-size: 10px;
  font-weight: 500;
  color: #DC2626;
  margin-left: 6px;
}

.disabled-text {
  color: #9CA3AF !important;
  text-decoration: line-through;
}

