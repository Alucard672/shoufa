<!--pages/init/tenant.wxml-->
<view class="container">
  <view class="header">
    <text class="title">初始化租户</text>
    <text class="subtitle">首次使用需要创建一个租户</text>
  </view>

  <view class="form-section">
    <view class="form-item">
      <text class="label">租户名称 *</text>
      <input 
        class="input" 
        placeholder="请输入租户名称" 
        value="{{tenantName}}"
        bindinput="onTenantNameInput"
      />
    </view>

    <view class="form-item">
      <text class="label">联系人</text>
      <input 
        class="input" 
        placeholder="请输入联系人" 
        value="{{contact}}"
        bindinput="onContactInput"
      />
    </view>

    <view class="form-item">
      <text class="label">联系电话</text>
      <input 
        class="input" 
        type="number"
        placeholder="请输入联系电话" 
        value="{{phone}}"
        bindinput="onPhoneInput"
      />
    </view>

    <view class="form-item">
      <text class="label">地址</text>
      <textarea 
        class="textarea" 
        placeholder="请输入地址" 
        value="{{address}}"
        bindinput="onAddressInput"
        maxlength="200"
      />
    </view>
  </view>

  <view class="button-section">
    <button 
      class="create-btn" 
      bindtap="onCreateTenant"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      创建租户
    </button>
  </view>

  <view class="tip-section">
    <text class="tip-text">提示：创建租户后，返回登录页面即可正常登录</text>
  </view>
</view>

