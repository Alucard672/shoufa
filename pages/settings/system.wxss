/* pages/settings/system.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: #999;
}

.section {
  margin-bottom: 32rpx;
}

.menu-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.param-item {
  padding: 32rpx;
  border-bottom: 1px solid #f5f5f5;
}

.param-item:last-child {
  border-bottom: none;
}

.param-content {
  display: flex;
  flex-direction: column;
}

.param-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.param-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.param-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #007AFF;
}

.param-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.param-edit {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.param-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #f9f9f9;
}

.param-unit {
  font-size: 28rpx;
  color: #666;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  border-top: 1px solid #f5f5f5;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn-edit,
.btn-cancel,
.btn-save {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-edit,
.btn-save {
  background: #007AFF;
  color: #fff;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

