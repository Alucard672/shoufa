/* pages/settings/employees.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: #999;
}

.btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.btn-primary {
  background: #2b7fff;
  color: #fff;
}

.list-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.list-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  position: relative;
}

.item-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.item-avatar-wrapper {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  border-radius: 50%;
  overflow: hidden;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.item-avatar-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}

.item-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.item-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  word-break: break-all;
  overflow-wrap: break-word;
  margin-bottom: 8rpx;
}

.item-role-badge-top {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  background: #e6f7ff;
  color: #1890ff;
  border-radius: 12rpx;
  font-weight: 500;
  z-index: 1;
}

.item-phone {
  font-size: 28rpx;
  color: #666;
  word-break: break-all;
  overflow-wrap: break-word;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-actions {
  display: flex;
  gap: 16rpx;
}

.btn-icon {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333;
}

.btn-edit {
  background: #f0f9ff;
  color: #1890ff;
}

.btn-danger {
  background: #fff5f5;
  color: #f56565;
}

.empty-tip {
  padding: 80rpx 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading-tip {
  padding: 80rpx 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 90%;
  max-width: 680rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1px solid #f5f5f5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-close {
  width: 32rpx;
  height: 32rpx;
  color: #999;
}

.modal-body {
  padding: 32rpx;
  flex: 1;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.form-input {
  width: 100%;
  min-height: 88rpx;
  padding: 24rpx 32rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  line-height: 1.5;
  word-break: break-all;
  overflow-wrap: break-word;
}

.form-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  line-height: 1.5;
  word-break: break-all;
}

.modal-footer {
  display: flex;
  border-top: 1px solid #f5f5f5;
  flex-shrink: 0;
}

.modal-footer .btn {
  flex: 1;
  padding: 32rpx;
  border-radius: 0;
  font-size: 32rpx;
  line-height: 1.5;
  min-height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel {
  background: #f5f5f5;
  color: #333;
  border-right: 1px solid #e5e5e5;
}

.btn-submit {
  background: #2b7fff;
  color: #fff;
}

