/* pages/statistics/index.wxss */
@import "../../styles/big-design-common.wxss";

.design-page {
  /* 使用 big-design-common 的 16px 页面留白与背景 */
}

.page-header {
  margin-bottom: 16px;
}

.page-title {
  font-size: 20px;
  font-weight: 500;
  color: #101828;
  display: block;
  margin-bottom: 4px;
}

.page-subtitle {
  font-size: 14px;
  color: #6A7282;
  display: block;
}

/* 顶部统计卡：一排三个 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
  margin-bottom: 12px;
}

.stats-card {
  flex: 1;
  padding: 12px;
  border-radius: 14px;
  color: #FFFFFF;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.stats-card:active {
  opacity: 0.9;
}

.stats-label {
  font-size: 11px;
  opacity: 0.8;
}

.stats-value-row {
  display: flex;
  align-items: baseline;
  gap: 4px;
  margin-top: 6px;
}

.stats-value {
  font-size: 20px;
  font-weight: 700;
  line-height: 28px;
}

.stats-unit {
  font-size: 11px;
  opacity: 0.8;
}

.stats-blue {
  background: linear-gradient(135deg, rgba(43, 127, 255, 1) 0%, rgba(21, 93, 252, 1) 100%);
}

.stats-green {
  background: linear-gradient(135deg, rgba(0, 201, 80, 1) 0%, rgba(0, 166, 62, 1) 100%);
}

.stats-green-2 {
  background: linear-gradient(135deg, rgba(0, 201, 80, 1) 0%, rgba(0, 166, 62, 1) 100%);
}

.stats-orange {
  background: linear-gradient(135deg, rgba(255, 166, 0, 1) 0%, rgba(255, 140, 0, 1) 100%);
}

.stats-purple {
  background: linear-gradient(135deg, rgba(173, 70, 255, 1) 0%, rgba(152, 16, 250, 1) 100%);
}

.stats-teal {
  background: linear-gradient(135deg, rgba(16, 185, 129, 1) 0%, rgba(5, 150, 105, 1) 100%);
}

/* 统计区域 */
.stats-section {
  margin-top: 24px;
  margin-bottom: 24px;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12px;
  padding: 0 4px;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #101828;
}

.section-count {
  font-size: 14px;
  color: #6A7282;
}

.stats-list-container {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.stats-list-item {
  padding: 16px;
  cursor: pointer;
  transition: background-color 0.2s;
}

.stats-list-item:active {
  background-color: #F9FAFB;
}

.list-item-header {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  margin-bottom: 12px;
  padding-bottom: 12px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.style-image-container-small {
  width: 50px;
  height: 50px;
  flex-shrink: 0;
  border-radius: 8px;
  overflow: hidden;
  background: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.style-image-small {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.style-image-placeholder-small {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon-small {
  width: 20px;
  height: 20px;
  opacity: 0.3;
  color: #6A7282;
}

.list-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.list-item-title {
  font-size: 16px;
  font-weight: 700;
  color: #101828;
}

.list-item-subtitle {
  font-size: 14px;
  color: #4A5565;
}

.list-item-meta {
  font-size: 12px;
  color: #99A1AF;
}

.list-item-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.list-stat-item {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.list-stat-label {
  font-size: 12px;
  color: #6A7282;
}

.list-stat-value {
  font-size: 16px;
  font-weight: 600;
  color: #101828;
}

.list-stat-value.return {
  color: #00A63E;
}

.list-stat-unit {
  font-size: 12px;
  color: #99A1AF;
  margin-left: 4px;
}

.empty-tip {
  padding: 60rpx 32rpx;
  text-align: center;
  color: #99A1AF;
  font-size: 28rpx;
}

/* 统计列表 */
.statistics-list {
  margin-top: 12px;
}

.stat-card {
  margin-bottom: 12px;
  padding: 16px;
  border-radius: 14px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.stat-card-warn {
  background: #FFF7ED; /* 浅橙色 - 未回货 */
  border-color: #FFD6A7;
}

.stat-card-info {
  background: #EFF6FF; /* 浅蓝色 - 部分回货 */
  border-color: #BEDBFF;
}

.stat-card-ok {
  background: #F0FDF4; /* 浅绿色 - 已完成 */
  border-color: #BBF7D0;
}

/* 超入：红色视觉提示（优先级高于状态底色） */
.stat-card.stat-card--danger {
  border-color: #DC2626 !important;
  background: #FEF2F2 !important;
  border-width: 2px;
}

.stat-card.stat-card--danger .stat-no {
  color: #991B1B;
}

.stat-head-right {
  display: flex;
  align-items: center;
  gap: 6px;
}

.overreturn-pill {
  background-color: #DC2626;
  color: #FFFFFF;
  font-size: 12px;
  padding: 2px 6px;
  border-radius: 6px;
  line-height: 16px;
  flex-shrink: 0;
}

.stat-value--danger {
  color: #DC2626 !important;
  font-weight: 700;
}

.stat-header {
  display: none;
}

.stat-title {
  display: none;
}

.stat-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8px;
}

.stat-no {
  font-size: 16px;
  font-weight: 600;
  color: #101828;
}

.stat-style-line {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 6px;
  margin-bottom: 12px;
}

.style-line-text {
  font-size: 14px;
  color: #4A5565;
  font-weight: 500;
}

.style-line-meta {
  font-size: 14px;
  color: #9810FA;
  font-weight: 500;
}

/* 搜索框（按 Figma） */
.search-wrap {
  margin: 8px 0 12px;
}

.search-input {
  height: 36px;
  border-radius: 8px;
}

.stat-style-row {
  display: flex;
  align-items: flex-start;
  gap: 12px;
}

.stat-style {
  display: flex;
  flex-direction: column;
  gap: 4px;
  font-size: 14px;
  flex: 1;
  min-width: 0;
}

.style-name-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.style-meta-row {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 12px;
}

.style-usage {
  color: #6366F1;
  font-weight: 500;
}

.style-meta-sep {
  color: #99A1AF;
}

.style-loss {
  color: #6A7282;
}

.style-image-container {
  width: 60px;
  height: 60px;
  flex-shrink: 0;
}

.style-image {
  width: 100%;
  height: 100%;
  border-radius: 8px;
  background: #F3F4F6;
}

.style-image-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 8px;
  background: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 24px;
  height: 24px;
  opacity: 0.3;
  color: #6A7282;
}

.style-code {
  color: #101828;
  font-weight: 700;
}

.style-usage {
  color: #9810FA;
}

/* 顶部：3列（发料日期 / 最后回货时间 / 发料重量） */
.stat-top {
  display: flex;
  gap: 8px;
  margin-bottom: 8px;
}

.stat-row {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
  min-width: 0;
}

/* 表头：字段名 + 单位 同一行，且不折行 */
.stat-label-line {
  display: flex;
  align-items: baseline;
  gap: 4px;
  white-space: nowrap;
  line-height: 14px;
}

.stat-label {
  font-size: 10px;
  color: #6A7282;
  white-space: nowrap;
}

.stat-unit-inline {
  font-size: 10px;
  color: #99A1AF;
  white-space: nowrap;
}

.stat-value {
  font-size: 13px;
  font-weight: 500;
  color: #101828;
  line-height: 18px;
  white-space: nowrap;
}

.stat-value.weight {
  color: #155DFC;
}

.stat-value.return {
  color: #00A63E;
}

/* 下面：4列等分 */
.stat-grid4 {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 8px;
  margin-bottom: 8px;
}

.remaining-label-line {
  display: flex;
  align-items: baseline;
  gap: 4px;
  white-space: nowrap;
}

.remaining-unit {
  font-size: 10px;
  color: #99A1AF;
  line-height: 12px;
}

.stat-remaining {
  padding-top: 13px;
  border-top: 1px solid #FFD6A7;
}

.remaining-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.remaining-label {
  font-size: 12px;
  color: #FF6900;
}

.remaining-value {
  font-size: 12px;
  font-weight: 500;
  color: #F54900;
}

.remaining-quantity {
  font-size: 12px;
  font-weight: 500;
  color: #F54900;
}

.stat-waiting {
  text-align: center;
  padding: 8px 0;
}

.waiting-text {
  font-size: 14px;
  color: #F54900;
}

.return-details {
  margin-top: 13px;
  padding-top: 13px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.details-title {
  font-size: 12px;
  font-weight: 500;
  color: #6A7282;
  display: block;
  margin-bottom: 8px;
}

.details-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.detail-item {
  background: #FFFFFF;
  border-radius: 4px;
  padding: 8px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-header {
  display: flex;
  align-items: center;
  gap: 8px;
}

.detail-no {
  font-size: 12px;
  color: #99A1AF;
}

.detail-date {
  font-size: 12px;
  color: #4A5565;
}

.detail-info {
  font-size: 12px;
  font-weight: 500;
  color: #101828;
}

/* 旧的 stat-return 样式不再使用（保留其它颜色类：weight/return） */

/* 损耗率样式 */
.loss-positive {
  color: #F54900;
}

.loss-negative {
  color: #00A63E;
}

.loss-rate {
  color: #6A7282;
  font-size: 12px;
  margin-left: 4px;
}

.style-loss {
  font-size: 12px;
  color: #6A7282;
  margin-left: 4px;
}

