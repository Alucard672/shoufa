/* pages/statistics/style.wxss */
.container {
  padding: 16px;
  background: #F9FAFB;
  min-height: 100vh;
  -webkit-tap-highlight-color: transparent;
}

.filter-section {
  margin-bottom: 12px;
}

.filter-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  background: #FFFFFF;
  border-radius: 12px;
  padding: 12px;
}

.stats-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.stat-item {
  background: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
}

.stat-header {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  margin-bottom: 0;
  padding-bottom: 0;
}

.style-image-container {
  width: 60px;
  height: 60px;
  flex-shrink: 0;
  border-radius: 8px;
  overflow: hidden;
  background: #F3F4F6;
}

.style-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.style-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 24px;
  height: 24px;
  opacity: 0.3;
}

.stat-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.style-name-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.style-code {
  font-size: 16px;
  font-weight: 700;
  color: #101828;
}

.style-name {
  font-size: 14px;
  color: #4A5565;
}

.style-meta-row {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
}

.style-meta.usage {
  color: #6366F1;
  font-weight: 500;
}

.style-meta.loss {
  color: #6A7282;
}

.style-meta-sep {
  color: #CBD5E1;
}

.factory-count {
  font-size: 12px;
  color: #6A7282;
}

.stat-data-row {
  display: flex;
  align-items: center;
  gap: 16px;
  padding-top: 12px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.data-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
  min-width: 0;
}

.data-label {
  font-size: 12px;
  color: #6A7282;
}

.data-value {
  font-size: 14px;
  font-weight: 600;
  color: #101828;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.data-value.return {
  color: #00A63E;
}

.filter-section {
  margin-bottom: 12px;
  background: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
}

.filter-item {
  margin-bottom: 16px;
}

.filter-item:last-child {
  margin-bottom: 0;
}

.filter-row {
  display: flex;
  gap: 12px;
}

.filter-item-inline {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.filter-item-row {
  display: flex;
  align-items: center;
  gap: 12px;
}

.filter-label-inline {
  font-size: 14px;
  color: #101828;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
  min-width: 42px;
  line-height: 1;
  margin-bottom: 0;
}

.style-search-input {
  flex: 1;
  box-sizing: border-box;
  height: 32px;
  padding: 0 12px;
  background: #F3F3F5;
  border-radius: 8px;
  border: 1px solid transparent;
  font-size: 14px;
  color: #101828;
  line-height: 32px;
}

/* 日期筛选在 filter-item 中的样式 */
.filter-item-row filter-tabs {
  flex: 1;
  --filter-tabs-margin-bottom: 0px;
}

.empty-tip {
  padding: 80rpx 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

