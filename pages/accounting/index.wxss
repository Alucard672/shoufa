/* pages/accounting/index.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.page-header {
  margin-bottom: 32rpx;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.page-subtitle {
  font-size: 24rpx;
  color: #999;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.factory-list {
  display: flex;
  flex-direction: column;
}

.factory-card {
  padding: 32rpx;
}

.factory-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.factory-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.factory-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.factory-contact {
  font-size: 24rpx;
  color: #999;
}

.factory-arrow {
  font-size: 40rpx;
  color: #ccc;
  margin-left: 16rpx;
}

.factory-summary {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 1px solid #f5f5f5;
}

.summary-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.summary-value.total {
  color: #2b7fff;
  font-weight: 700;
}

.summary-value.settled {
  color: #10b981;
}

.summary-value.unpaid {
  color: #f59e0b;
  font-weight: 600;
}

/* 空状态 */
.empty-tip {
  padding: 80rpx 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading-tip {
  padding: 80rpx 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
