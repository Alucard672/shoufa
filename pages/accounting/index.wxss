/* pages/accounting/index.wxss */
page {
  background-color: #F8FAFC;
}

.page-wrapper {
  width: 100%;
  min-height: 100vh;
  padding: 0;
  margin: 0;
  display: block;
  background-color: #F8FAFC;
}

/* 顶部蓝色背景区域 */
.header-bg {
  background: linear-gradient(135deg, #155DFC 0%, #2B7FFF 100%);
  padding: 40rpx 32rpx 100rpx; /* 顶部间距减小：从60rpx改为40rpx */
  border-radius: 0 0 16rpx 16rpx; /* 圆角调小至 16rpx */
  position: relative;
  color: #fff;
  margin-bottom: -60rpx;
  width: 100%;
  box-sizing: border-box;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.header-icon {
  width: 80rpx;
  height: 80rpx;
}

.header-text-group {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.8;
  line-height: 1.2;
  margin-top: 8rpx;
}

/* 加工厂列表 */
.factory-list-section {
  padding: 0 32rpx;
  position: relative;
  z-index: 1;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.factory-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.factory-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.factory-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #1E293B;
}

.factory-contact {
  font-size: 26rpx;
  color: #64748B;
}

.factory-arrow {
  font-size: 40rpx;
  color: #CBD5E1;
  margin-left: 16rpx;
  line-height: 1;
}

.factory-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.settle-btn {
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  background: #155DFC;
  box-shadow: 0 10rpx 24rpx rgba(21, 93, 252, 0.25);
}

.settle-btn-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}

.factory-summary-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 24rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #94A3B8;
}

.summary-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #1E293B;
}

.summary-value.unpaid {
  color: #F59E0B;
}

/* 空状态 */
.empty-tip, .loading-tip {
  padding: 120rpx 32rpx;
  text-align: center;
  color: #94A3B8;
  font-size: 28rpx;
}
