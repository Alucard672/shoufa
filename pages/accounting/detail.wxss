/* pages/accounting/detail.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 100rpx;
}

.section {
  margin-bottom: 32rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

/* 加工厂信息 */
.factory-info {
  margin-bottom: 32rpx;
}

.factory-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.factory-contact {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 汇总卡片 */
.summary-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.summary-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  opacity: 0.9;
}

.summary-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.summary-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.summary-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.summary-value {
  font-size: 36rpx;
  font-weight: 700;
}

.summary-value.total {
  color: #fff;
}

.summary-value.settled {
  color: #4ade80;
}

.summary-value.unpaid {
  color: #fbbf24;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-share {
  background: #f3f4f6;
  color: #333;
}

.btn-primary {
  background: #2b7fff;
  color: #fff;
}

/* 回货单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.order-card {
  padding: 24rpx;
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.order-date {
  font-size: 24rpx;
  color: #999;
}

.order-style {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.order-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #2b7fff;
}

.order-details {
  display: flex;
  gap: 32rpx;
  padding-top: 16rpx;
  border-top: 1px solid #f5f5f5;
}

.detail-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #999;
}

.detail-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.detail-value.unpaid {
  color: #f59e0b;
}

/* 结算记录 */
.settlement-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.settlement-card {
  padding: 24rpx;
}

.settlement-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.settlement-date {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.settlement-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #10b981;
}

.settlement-no {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-tip {
  padding: 80rpx 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading-tip {
  padding: 80rpx 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

