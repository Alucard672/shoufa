/* pages/factory/detail.wxss */
.container {
  padding: 16px;
}

.factory-info {
  margin-bottom: 16px;
}

.factory-name {
  font-size: 20px;
  font-weight: 500;
  color: #101828;
  display: block;
  margin-bottom: 8px;
}

.factory-contact,
.factory-phone,
.factory-price,
.factory-settlement {
  font-size: 14px;
  color: #6A7282;
  display: block;
  margin-bottom: 4px;
}

.stats-section {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 16px;
}

.stat-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
}

.stat-label {
  font-size: 14px;
  color: #6A7282;
}

.stat-value {
  font-size: 18px;
  font-weight: 700;
  color: #101828;
}

.stat-value.fee {
  color: #00A63E;
}

.section {
  margin-bottom: 16px;
}

.section-title {
  font-size: 18px;
  font-weight: 500;
  color: #101828;
  display: block;
  margin-bottom: 12px;
}

.record-list {
  background: #FFFFFF;
  border-radius: 14px;
  padding: 16px;
}

.record-item {
  padding: 8px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.record-item:last-child {
  border-bottom: none;
}

.record-text {
  font-size: 14px;
  color: #4A5565;
}

.empty-tip {
  text-align: center;
  padding: 20px 0;
  color: #99A1AF;
  font-size: 14px;
}

.settlement-section {
  margin-bottom: 16px;
}

.btn-settlement-full {
  width: 100%;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
}
