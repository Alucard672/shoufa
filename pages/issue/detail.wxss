/* pages/issue/detail.wxss */
page {
  background-color: #F8FAFC;
}

.page-wrapper {
  width: 100%;
  min-height: 100vh;
  padding: 0;
  margin: 0;
  display: block;
  padding-bottom: 160rpx; /* 底部空间以容纳分享按钮 */
  padding-top: 0; /* 去掉顶部边距 */
}

/* 顶部橙色背景区域 */
.header-bg {
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
  padding: 0 32rpx 120rpx; /* 去掉顶部边距，只保留左右和底部 */
  border-radius: 0 0 16rpx 16rpx;
  position: relative;
  color: #fff;
  margin-bottom: -80rpx;
  width: 100%;
  box-sizing: border-box;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding-top: 40rpx; /* 头部内容区域顶部间距 */
}

.header-icon-box {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-icon-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
}

.header-text-group {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.8;
  line-height: 1.2;
  margin-top: 8rpx;
}

.header-time {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  opacity: 0.7;
}

.overreturn-banner {
  margin: 0 0 16rpx;
  padding: 20rpx 24rpx;
  background: #FEF2F2;
  border: 2rpx solid #EF4444;
  border-radius: 20rpx;
  color: #7F1D1D;
}

.overreturn-banner-title {
  display: block;
  font-size: 28rpx;
  font-weight: 800;
  margin-bottom: 8rpx;
}

.overreturn-banner-desc {
  display: block;
  font-size: 26rpx;
  line-height: 1.4;
}

.time-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 汇总统计网格 */
.summary-grid-section {
  padding: 0; /* 去掉左右边距 */
  position: relative;
  z-index: 1;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  margin: 0; /* 去掉左右边距，贴边显示 */
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  text-align: center;
}

.grid-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.grid-label {
  font-size: 24rpx;
  color: #6A7282;
}

.grid-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #101828;
  line-height: 1.2;
}

.grid-value.unpaid {
  color: #F59E0B;
}

/* 通用卡片和部分 */
.section {
  margin-top: 32rpx;
  padding: 0; /* 去掉左右边距 */
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #101828;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin: 0; /* 去掉左右边距，贴边显示 */
}

/* 款式信息卡片 */
.style-info-row {
  display: flex;
  gap: 24rpx;
}

.style-image-container {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #F3F4F6;
  flex-shrink: 0;
}

.style-image {
  width: 100%;
  height: 100%;
}

.style-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 64rpx;
  height: 64rpx;
  opacity: 0.2;
}

.style-text-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8rpx;
}

.style-name-row {
  margin-bottom: 4rpx;
}

.style-code {
  font-size: 30rpx;
  font-weight: bold;
  color: #F59E0B;
  margin-right: 8rpx;
}

.style-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #101828;
}

.style-meta-row {
  display: flex;
  gap: 16rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #6A7282;
  background: #F3F4F6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.style-price-row {
  margin-top: 8rpx;
  font-size: 26rpx;
}

.price-label {
  color: #6A7282;
}

.price-value {
  font-weight: 600;
  color: #101828;
}

/* 回货单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-card {
  padding: 32rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.order-header-left .header-icon {
  width: 36rpx;
  height: 36rpx;
}

.order-date {
  font-size: 28rpx;
  font-weight: 500;
  color: #101828;
}

.status-badge {
  background: #E0F2FE;
  color: #2B7FFF;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  margin-left: 12rpx;
}

.status-badge.settled {
  background: #D1FAE5;
  color: #10B981;
}

.order-details-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx 16rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 24rpx;
}

.detail-column {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #94A3B8;
}

.detail-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
  line-height: 1.2;
}

.detail-value.highlight {
  color: #1E293B; 
}

/* 空状态 */
.empty-tip {
  padding: 80rpx 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 悬浮分享按钮 */
.fab-share-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #F59E0B;
  color: #fff;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 28rpx 60rpx;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 12rpx 32rpx rgba(245, 158, 11, 0.4);
  transition: transform 0.2s ease-in-out;
  -webkit-tap-highlight-color: transparent;
}

.fab-share-btn:active {
  transform: translateX(-50%) scale(0.95);
}

.fab-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 作废提示横幅 */
.voided-banner {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #FEF2F2;
  color: #DC2626;
  padding: 24rpx 32rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  z-index: 200;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

