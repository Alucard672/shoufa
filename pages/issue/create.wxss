/* pages/issue/create.wxss */
page {
  background-color: #F8FAFC;
}

.page-wrapper {
  width: 100%;
  min-height: 100vh;
  padding: 0;
  margin: 0;
  display: block;
  padding-bottom: 160rpx;
}

/* 顶部橙色背景区域（参考发料明细页） */
.header-bg {
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
  padding: 0 32rpx 120rpx; /* 去掉顶部边距，只保留左右和底部 */
  border-radius: 0 0 16rpx 16rpx;
  position: relative;
  z-index: 1; /* 确保头部在白色卡片下方 */
  color: #fff;
  margin-bottom: -80rpx;
  width: 100%;
  box-sizing: border-box;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding-top: 40rpx; /* 头部内容区域顶部间距 */
}

.header-icon-box {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-icon-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
}

.header-text-group {
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.85;
  line-height: 1.2;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-time {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  opacity: 0.8;
}

.time-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 区块/卡片 */
.section {
  margin-top: 32rpx;
  padding: 0; /* 去掉左右边距 */
}

/* 让"款式详情卡"压住抬头背景（修复层级反了的问题） */
.style-top {
  margin-top: 0;
  position: relative;
  z-index: 2;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin: 0; /* 去掉左右边距，贴边显示 */
}

/* 款式信息卡片 */
.style-info-row {
  display: flex;
  gap: 24rpx;
}

.style-image-container {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #F3F4F6;
  flex-shrink: 0;
}

.style-image {
  width: 100%;
  height: 100%;
}

.style-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 64rpx;
  height: 64rpx;
  opacity: 0.2;
}

.style-text-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8rpx;
  min-width: 0;
}

.style-code {
  font-size: 30rpx;
  font-weight: bold;
  color: #F59E0B;
  margin-right: 8rpx;
}

.style-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #101828;
}

.style-meta-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #6A7282;
  background: #F3F4F6;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.img-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #F59E0B;
}

/* 汇总统计网格（复用明细页元素，压住抬头背景） */
.summary-grid-section {
  padding: 0; /* 去掉左右边距 */
  position: relative;
  z-index: 2;
  margin-top: 24rpx;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  margin: 0; /* 去掉左右边距，贴边显示 */
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  text-align: center;
}

.grid-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.grid-label {
  font-size: 24rpx;
  color: #6A7282;
}

.grid-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #101828;
  line-height: 1.2;
}

.form-item {
  margin-bottom: 16px;
  width: 100%;
  box-sizing: border-box;
}

.form-label {
  display: block;
  font-size: 14px;
  color: #101828;
  margin-bottom: 8px;
}

.form-hint {
  display: block;
  font-size: 12px;
  color: #667085;
  margin-top: 4px;
}

.form-hint-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 4px;
  gap: 4px;
}

.form-hint-label {
  font-size: 12px;
  color: #155DFC;
  font-weight: 500;
}

.form-hint-value {
  font-size: 12px;
  color: #667085;
}

.form-hint-separator {
  font-size: 12px;
  color: #99A1AF;
  margin: 0 2px;
}

.form-input {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  background: #F3F3F5;
  border-radius: 8px;
  font-size: 16px;
  color: #101828;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  background: #F3F3F5;
  border-radius: 8px;
  display: flex;
  align-items: center;
  font-size: 16px;
  color: #101828;
  box-sizing: border-box;
}

.form-actions {
  margin-top: 24px;
  width: 100%;
  box-sizing: border-box;
}

.form-actions button {
  width: 100%;
  height: 44px;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  border: none;
  line-height: 44px;
}

.form-actions .btn {
  width: 100%;
  height: 44px;
  box-sizing: border-box;
  margin: 0;
}

