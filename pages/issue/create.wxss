/* pages/issue/create.wxss */
.container {
  padding: 16px;
  box-sizing: border-box;
  width: 100%;
}

.form {
  background: #FFFFFF;
  border-radius: 14px;
  padding: 16px;
  box-sizing: border-box;
  width: 100%;
}

.form-item {
  margin-bottom: 16px;
  width: 100%;
  box-sizing: border-box;
}

.form-label {
  display: block;
  font-size: 14px;
  color: #101828;
  margin-bottom: 8px;
}

.form-hint {
  display: block;
  font-size: 12px;
  color: #667085;
  margin-top: 4px;
}

.form-input {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  background: #F3F3F5;
  border-radius: 8px;
  font-size: 16px;
  color: #101828;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  background: #F3F3F5;
  border-radius: 8px;
  display: flex;
  align-items: center;
  font-size: 16px;
  color: #101828;
  box-sizing: border-box;
}

.form-actions {
  margin-top: 24px;
  width: 100%;
  box-sizing: border-box;
}

.form-actions button {
  width: 100%;
  height: 44px;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  border: none;
  line-height: 44px;
}

.form-actions .btn {
  width: 100%;
  height: 44px;
  box-sizing: border-box;
  margin: 0;
}

