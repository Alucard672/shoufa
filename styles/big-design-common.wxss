/* styles/big-design-common.wxss */
page {
  background: #F9FAFB;
}

/* 页面容器：对齐 Figma 16px 内边距 */
.design-page {
  /* 减小顶部留白（从16rpx减小到8rpx），左右仍保持 16px（32rpx） */
  padding: 8rpx 32rpx 32rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 通用标题区 */
.design-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.design-header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.design-title {
  font-size: 40rpx;
  font-weight: 500;
  color: #101828;
  line-height: 60rpx;
}

.design-subtitle {
  font-size: 28rpx;
  color: #6A7282;
  line-height: 40rpx;
}

/* 全局：隐藏设计稿副标题，减少顶部占用 */
.design-subtitle {
  display: none !important;
}

/* 通用白卡 */
.design-card {
  background: #FFFFFF;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 28rpx; /* 14px */
  box-sizing: border-box;
}

.design-section {
  margin-bottom: 32rpx;
}

/* 分段按钮（发料页：圆角 8px） */
.seg-row {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.seg-btn {
  height: 64rpx; /* 32px */
  padding: 0 24rpx;
  border-radius: 16rpx; /* 8px */
  border: 1px solid rgba(0, 0, 0, 0.1);
  background: #FFFFFF;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #0A0A0A;
  box-sizing: border-box;
}

.seg-btn.is-active {
  background: #030213;
  border-color: #030213;
  color: #FFFFFF;
}

/* 分段按钮（回货页：胶囊） */
.seg-btn-pill {
  height: 74rpx; /* ~37px */
  border-radius: 9999rpx;
  padding: 0 28rpx;
}

/* 搜索框（可选左/右图标） */
.search-wrap {
  position: relative;
  width: 100%;
}

.search-input {
  width: 100%;
  height: 72rpx; /* 36px */
  background: #F3F3F5;
  border-radius: 16rpx; /* 8px */
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 32rpx; /* 16px */
  color: #101828;
}

.search-input.search-left-icon {
  padding-left: 80rpx;
}

.search-input.search-right-icon {
  padding-right: 80rpx;
}

.search-icon-left {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  opacity: 0.9;
}

.search-icon-right {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  opacity: 0.7;
}


