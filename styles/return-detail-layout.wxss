/* styles/return-detail-layout.wxss */
page {
  background-color: #F8FAFC;
}

.page-wrapper {
  width: 100%;
  min-height: 100vh;
  padding: 0;
  margin: 0;
  display: block;
  background-color: #F8FAFC;
  padding-bottom: 120rpx;
}

/* 顶部青色背景区域（对齐回货明细） */
.header-bg {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  padding: 60rpx 32rpx 120rpx;
  border-radius: 0 0 16rpx 16rpx;
  position: relative;
  color: #fff;
  margin-bottom: -80rpx;
  width: 100%;
  box-sizing: border-box;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.header-icon-box {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-icon-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
}

.header-text-group {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.8;
  line-height: 1.2;
  margin-top: 8rpx;
}

.header-time {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  opacity: 0.7;
}

.time-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 汇总统计网格（3x2） */
.summary-grid-section {
  padding: 0 32rpx;
  position: relative;
  z-index: 1;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  text-align: center;
}

.grid-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.grid-label {
  font-size: 24rpx;
  color: #6A7282;
}

.grid-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #101828;
  line-height: 1.2;
}

.grid-value.highlight {
  color: #10B981;
}

.grid-value.unpaid {
  color: #F59E0B;
}

/* 通用区块/卡片 */
.section {
  margin-top: 32rpx;
  padding: 0 32rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #101828;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.muted-text {
  font-size: 24rpx;
  color: #6A7282;
}

/* 过滤卡片 */
.filter-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1E293B;
  flex-shrink: 0;
}

.filter-input {
  flex: 1;
  height: 72rpx;
  background: #F3F4F6;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #101828;
  box-sizing: border-box;
}

.tabs-wrap {
  flex: 1;
  min-width: 0;
}

/* 列表/明细卡片 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.mini-grid {
  margin-top: 24rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 24rpx;
}

.mini-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.mini-label {
  font-size: 22rpx;
  color: #94A3B8;
}

.mini-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1E293B;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.mini-value.green {
  color: #10B981;
}

/* 款式/缩略图卡片（可复用） */
.style-info-row {
  display: flex;
  gap: 24rpx;
}

.style-image-container {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #F3F4F6;
  flex-shrink: 0;
}

.style-image {
  width: 100%;
  height: 100%;
}

.style-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 56rpx;
  height: 56rpx;
  opacity: 0.2;
}

.style-text-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 10rpx;
  min-width: 0;
}

.style-name-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-wrap: wrap;
}

.style-code {
  font-size: 30rpx;
  font-weight: 800;
  color: #10B981;
}

.style-name {
  font-size: 30rpx;
  font-weight: 800;
  color: #101828;
}

.style-meta-row {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.meta-pill {
  font-size: 24rpx;
  color: #6A7282;
  background: #F3F4F6;
  padding: 6rpx 14rpx;
  border-radius: 10rpx;
}

/* 空状态 */
.empty-tip {
  padding: 120rpx 32rpx;
  text-align: center;
  color: #94A3B8;
  font-size: 28rpx;
}


