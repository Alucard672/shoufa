/* pages/factory/create.wxss */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 16px 16px 0 0;
  max-height: 90vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: #0A0A0A;
}

.close-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
}

.icon-close {
  width: 16px;
  height: 16px;
  color: #0A0A0A;
}

.form-container {
  padding: 16px;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-bottom: 16px;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 14px;
  font-weight: 500;
  color: #0A0A0A;
  line-height: 20px;
  min-height: 20px;
}

.form-input {
  padding: 0 12px;
  background: #F3F3F5;
  border: 1px solid rgba(0, 0, 0, 0);
  border-radius: 8px;
  font-size: 16px;
  color: #0A0A0A;
  height: 44px;
  line-height: 44px;
  box-sizing: border-box;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 12px;
  background: #F3F3F5;
  border: 1px solid #D1D5DC;
  border-radius: 8px;
  height: 44px;
  box-sizing: border-box;
}

.form-picker text {
  line-height: normal;
  display: inline-block;
  vertical-align: middle;
}

.form-picker .placeholder {
  color: #717182;
}

.picker-arrow {
  font-size: 20px;
  color: #6A7282;
}

.form-textarea {
  padding: 8px 12px;
  background: #F3F3F5;
  border: 1px solid rgba(0, 0, 0, 0);
  border-radius: 8px;
  font-size: 16px;
  color: #0A0A0A;
  min-height: 80px;
  line-height: 1.5em;
  box-sizing: border-box;
  width: 100%;
}

.form-actions {
  display: flex;
  gap: 8px;
  padding-top: 16px;
}

.btn {
  flex: 1;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
}

.btn-cancel {
  background: #FFFFFF;
  border: 1px solid rgba(0, 0, 0, 0.1);
  color: #0A0A0A;
}

.btn-submit {
  background: #155DFC;
  color: #FFFFFF;
}

/* 停用/启用按钮 */
.disable-action {
  padding: 16px 0;
  border-top: 1px solid rgba(0, 0, 0, 0.06);
  margin-top: 16px;
}

.btn-disable {
  width: 100%;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
  background: #FEF2F2;
  color: #DC2626;
  border: 1px solid #FECACA;
}

.btn-disable.btn-enable {
  background: #F0FDF4;
  color: #16A34A;
  border: 1px solid #BBF7D0;
}

.disable-hint {
  display: block;
  text-align: center;
  font-size: 12px;
  color: #DC2626;
  margin-top: 8px;
}
