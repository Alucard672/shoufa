/* pages/factory/index.wxss */
.container {
  padding: 16px;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.page-title {
  font-size: 20px;
  font-weight: 500;
  color: #101828;
}

.page-subtitle {
  font-size: 14px;
  color: #6A7282;
}

.btn {
  padding: 8px 16px;
  border-radius: 8px;
  font-size: 14px;
  text-align: center;
}

.btn-primary {
  background: #155DFC;
  color: #FFFFFF;
}

/* 统计卡片 */
.stats-cards {
  display: flex;
  gap: 8px;
  margin-bottom: 16px;
}

.stats-card {
  flex: 1;
  padding: 16px;
  border-radius: 14px;
  color: #FFFFFF;
}

.card-blue {
  background: linear-gradient(90deg, rgba(43, 127, 255, 1) 0%, rgba(21, 93, 252, 1) 100%);
}

.card-green {
  background: linear-gradient(90deg, rgba(0, 201, 80, 1) 0%, rgba(0, 166, 62, 1) 100%);
}

.stats-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stats-label {
  font-size: 14px;
  opacity: 0.8;
}

.stats-value {
  font-size: 24px;
  font-weight: 700;
  line-height: 1.33em;
}

.stats-unit {
  font-size: 12px;
  opacity: 0.8;
}

/* 搜索和筛选容器 */
.search-filter-container {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 16px;
}

.search-wrapper {
  flex: 1;
}

.filter-picker {
  flex-shrink: 0;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 8px 12px;
  background: #F3F4F6;
  border-radius: 8px;
  font-size: 13px;
  color: #364153;
}

.filter-arrow {
  font-size: 10px;
  color: #6A7282;
}

/* 工厂列表 */
.factory-list {
  margin-top: 0;
}

.factory-card {
  margin-bottom: 12px;
}

.factory-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12px;
}

.factory-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
  flex: 1;
}

.factory-name-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.factory-name {
  font-size: 16px;
  font-weight: 500;
  color: #101828;
}

.factory-contact {
  font-size: 14px;
  color: #6A7282;
}

.factory-actions {
  display: flex;
  align-items: center;
  gap: 8px;
}

.btn-settlement {
  padding: 6px 12px;
  background: #F0FDF4;
  color: #00A63E;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 500;
}

.btn-edit {
  padding: 6px 12px;
  background: #EFF6FF;
  color: #2B7FFF;
  border-radius: 6px;
  font-size: 12px;
}

.factory-arrow {
  font-size: 24px;
  color: #6A7282;
  font-weight: 300;
}

.factory-details {
  display: flex;
  gap: 8px;
  margin-bottom: 12px;
}

.detail-row {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.detail-label {
  font-size: 12px;
  color: #6A7282;
}

.detail-value-group {
  display: flex;
  align-items: baseline;
  gap: 4px;
}

.detail-value {
  font-size: 16px;
  font-weight: 700;
  color: #101828;
}

.detail-unit {
  font-size: 12px;
  color: #101828;
}

.detail-value.fee {
  color: #00A63E;
}

.factory-stats {
  display: flex;
  align-items: center;
  gap: 8px;
  padding-top: 12px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.stat-item {
  flex: 1;
}

.stat-text {
  font-size: 12px;
  color: #6A7282;
}

.stat-separator {
  color: #D1D5DC;
}

.empty-tip {
  text-align: center;
  padding: 40px 0;
  color: #99A1AF;
  font-size: 14px;
}

/* 已停用状态 */
.card-disabled {
  opacity: 0.6;
  background: #F9FAFB !important;
}

.disabled-badge {
  padding: 2px 6px;
  background: #FEF2F2;
  border-radius: 4px;
  font-size: 10px;
  font-weight: 500;
  color: #DC2626;
}

.disabled-text {
  color: #9CA3AF !important;
  text-decoration: line-through;
}

