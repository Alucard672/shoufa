/* pages/factory/detail.wxss */
.container {
  padding: 16px;
}

.factory-info {
  margin-bottom: 16px;
}

.factory-name {
  font-size: 20px;
  font-weight: 500;
  color: #101828;
  display: block;
  margin-bottom: 8px;
}

.factory-contact,
.factory-phone,
.factory-price,
.factory-settlement {
  font-size: 14px;
  color: #6A7282;
  display: block;
  margin-bottom: 4px;
}

.stats-section {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 16px;
}

.stat-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
}

.stat-label {
  font-size: 14px;
  color: #6A7282;
}

.stat-value {
  font-size: 18px;
  font-weight: 700;
  color: #101828;
}

.stat-value.fee {
  color: #00A63E;
}

.section {
  margin-bottom: 16px;
}

.section-title {
  font-size: 18px;
  font-weight: 500;
  color: #101828;
  display: block;
  margin-bottom: 12px;
}

.record-list {
  background: #FFFFFF;
  border-radius: 14px;
  padding: 16px;
}

.record-item {
  padding: 8px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.record-item:last-child {
  border-bottom: none;
}

.record-text {
  font-size: 14px;
  color: #4A5565;
}

.empty-tip {
  text-align: center;
  padding: 20px 0;
  color: #99A1AF;
  font-size: 14px;
}

.settlement-section {
  margin-bottom: 16px;
}

.btn-settlement-full {
  width: 100%;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
}

/* Tabs Styles */
.tabs {
  display: flex;
  background: #fff;
  padding: 0 16px;
  border-bottom: 1px solid #E4E5E7;
  margin-bottom: 16px;
  justify-content: space-around;
  border-radius: 12px;
}

.tab-item {
  text-align: center;
  font-size: 14px;
  color: #6A7282;
  padding: 12px 0;
  position: relative;
  flex: 1;
}

.tab-item.active {
  color: #00A63E;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 2px;
  background: #00A63E;
  border-radius: 2px;
}

/* Settlement Record Styles */
.settlement-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}

.settlement-no {
  font-size: 14px;
  color: #101828;
  font-weight: 500;
}

.settlement-amount {
  font-size: 16px;
  font-weight: 600;
  color: #00A63E;
}

.settlement-date {
  font-size: 12px;
  color: #98A2B3;
}

.settlement-remark {
  font-size: 12px;
  color: #6A7282;
  margin-top: 4px;
  background: #F9FAFB;
  padding: 4px 8px;
  border-radius: 4px;
  width: 100%;
  display: block;
  box-sizing: border-box;
}
