/* pages/mine/payment.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

/* 订阅状态卡片 */
.status-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.status-header {
  margin-bottom: 24rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #101828;
}

.status-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.status-item {
  display: flex;
  align-items: center;
}

.status-label {
  font-size: 28rpx;
  color: #667085;
  margin-right: 16rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #101828;
}

/* 套餐选择 */
.packages-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #101828;
  margin-bottom: 24rpx;
}

.packages-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.package-item {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s;
}

.package-item.selected {
  border-color: #155DFC;
  background: #EFF6FF;
}

.package-item.popular {
  border-color: #FF4444;
}

.package-badge {
  position: absolute;
  top: -12rpx;
  right: 32rpx;
  background: #FF4444;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.package-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #101828;
}

.package-days {
  font-size: 24rpx;
  color: #667085;
}

.package-price {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.price-current {
  font-size: 48rpx;
  font-weight: 700;
  color: #FF4444;
}

.price-original {
  font-size: 24rpx;
  color: #98A2B3;
  text-decoration: line-through;
}

.package-desc {
  font-size: 24rpx;
  color: #667085;
}

/* 支付按钮 */
.payment-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid #E5E7EB;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.confirm-btn {
  width: 100% !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
  padding: 0 !important;
  margin: 0 !important;
  background: #155DFC !important;
  color: #FFFFFF !important;
  border-radius: 44rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  border: none !important;
}

.confirm-btn.disabled {
  background: #E5E7EB !important;
  color: #98A2B3 !important;
}

.confirm-btn::after {
  border: none !important;
}

