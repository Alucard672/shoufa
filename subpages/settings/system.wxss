/* pages/settings/system.wxss */
.container {
  padding: 16rpx 32rpx 120rpx 32rpx; /* 顶部间距减小：从32rpx改为16rpx */
  min-height: 100vh;
  background: #f5f5f5;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx; /* 减小底部间距：从32rpx改为24rpx */
}

.header-left {
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: #999;
}

.section {
  margin-bottom: 32rpx;
}

.menu-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.param-item {
  padding: 32rpx;
  border-bottom: 1px solid #f5f5f5;
}

.param-item:last-child {
  border-bottom: none;
}

.param-content {
  display: flex;
  flex-direction: column;
}

.param-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.param-header-left {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 8rpx;
}

.param-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.param-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #007AFF;
}

.param-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.param-btn-edit,
.param-btn-cancel,
.param-btn-save {
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  line-height: 1.5;
}

.param-btn-edit,
.param-btn-save {
  background: #007AFF;
  color: #fff;
}

.param-btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.param-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.param-edit {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1px solid #f5f5f5;
}

.param-input {
  width: 100%;
  height: 72rpx;
  padding: 0 24rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #f9f9f9;
  box-sizing: border-box;
}

.param-unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 16rpx;
}

.param-edit-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
  margin-top: 8rpx;
}

